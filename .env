# User/Group IDs
PUID=1000
PGID=1000

# Timezone
TZ=America/Los_Angeles

# Application: "transmission" or "qbittorrent"
APP=transmission

# VPN TUN Control
# false  -> no VPN, no firewall changes
# true   -> enable WireGuard + kill-switch
TUN_ENABLED=false

# VPN Configuration (only used if TUN_ENABLED=true)
# Leave both blank for random selection from all configs
# Or specify country only for random city in that country
# Or specify both country and city for specific location
MULLVAD_COUNTRY=
MULLVAD_CITY=

# Local network for web UI access (optional)
# Example: LOCAL_NETWORK=192.168.163.0/24
LOCAL_NETWORK=192.168.163.0/24

# Transmission Authentication (leave blank for no auth)
TRANSMISSION_RPC_USERNAME=
TRANSMISSION_RPC_PASSWORD=

# qBittorrent Authentication (env defaults blank)
# Template config still has admin/adminadmin; env can override username
QBITTORRENT_USERNAME=
QBITTORRENT_PASSWORD=
